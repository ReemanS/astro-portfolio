---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Container from "@/components/Container.astro";
import ProjectsFilter from "@/components/projects/ProjectsFilter";

// Get all projects, sorted by date (newest to oldest)
const allProjects = (await getCollection("projects")).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const technologies = [
  ...new Set(
    allProjects.map((project: any) => project.data.technologies).flat()
  ),
];

const projectsData = allProjects.map((project) => ({
  id: project.id,
  data: {
    title: project.data.title,
    description: project.data.description,
    date: project.data.date,
    technologies: project.data.technologies,
    thumbnail: project.data.thumbnail,
    links: project.data.links,
  },
}));
---

<BaseLayout
  title="All Projects - Reeman Singh"
  description="Explore all of my projects showcasing my skills in web development, design, and software engineering."
>
  <main class="min-h-screen md:pt-14 bg-gray-400/5">
    <Container class="py-16">
      <div class="text-center mb-12">
        <h2 class="mb-4 text-center">All Projects</h2>
      </div>

      <ProjectsFilter
        client:load
        projects={projectsData}
        technologies={technologies}
      />

      {
        allProjects.length === 0 && (
          <div class="text-center py-12">
            <p class="text-slate-500">No projects found.</p>
          </div>
        )
      }
    </Container>
  </main>
</BaseLayout>
