---
import "@/styles/global.css";
import ArrowForwardIcon from "@/assets/icons/arrow-forward.svg";
import type { CollectionEntry } from "astro:content";
import CodeIcon from "@/assets/icons/code.svg";

interface Props {
  projectData: CollectionEntry<"projects">;
}
const { projectData } = Astro.props;
---

<article
  class="bg-white border border-slate-200 rounded-lg overflow-hidden transition-all duration-300 hover:shadow-lg hover:border-primary/30 group w-full max-w-[320px] h-full"
>
  <a href={`/projects/${projectData.id}`} class="flex flex-col h-full">
    <div class="relative w-full h-48 overflow-hidden">
      {
        projectData.data.thumbnail ? (
          <img
            src={projectData.data.thumbnail}
            alt={projectData.data.title}
            class="w-full h-full min-h-64 object-cover transition-transform duration-300 group-hover:scale-105"
          />
        ) : (
          <div class="w-full h-full bg-slate-100 flex items-center justify-center">
            <CodeIcon class="w-8 text-slate-400 opacity-60" />
          </div>
        )
      }
    </div>

    <div class="p-4 flex-1 flex flex-col gap-3">
      <div class="flex items-center justify-between gap-2">
        <h3
          class="font-space-grotesk font-semibold text-lg text-slate-900 line-clamp-1 flex-1"
        >
          {projectData.data.title}
        </h3>
        <ArrowForwardIcon
          class="w-4 h-4 text-slate-400 transition-all duration-200 group-hover:text-primary group-hover:translate-x-1 flex-shrink-0"
        />
      </div>

      <p class="text-slate-600 text-sm leading-relaxed line-clamp-2">
        {projectData.data.description}
      </p>

      <div class="text-xs text-slate-500 font-medium">
        {
          new Date(projectData.data.date).toLocaleDateString("en-US", {
            year: "numeric",
            month: "short",
          })
        }
      </div>

      <div class="flex flex-wrap gap-1.5">
        {
          projectData.data.technologies
            .slice(0, 3)
            .map((tech: string) => (
              <span class="bg-primary/10 text-primary px-2 py-1 rounded-full text-xs font-medium">
                {tech}
              </span>
            ))
        }
        {
          projectData.data.technologies.length > 3 && (
            <span class="bg-slate-100 text-slate-500 px-2 py-1 rounded-full text-xs font-medium">
              +{projectData.data.technologies.length - 3}
            </span>
          )
        }
      </div>
    </div>
  </a>
</article>
