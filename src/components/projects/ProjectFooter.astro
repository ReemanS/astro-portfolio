---
import "@/styles/global.css";
import Container from "@/components/Container.astro";
import ArrowBackwardIcon from "@/assets/icons/arrow-backward.svg";
---

<footer class="mt-14 border-t border-slate-200 bg-slate-50/50">
  <Container class="py-12">
    <div class="text-center space-y-6">
      <!-- Back to projects -->
      <div>
        <a
          href="/#projects"
          class="inline-flex items-center gap-2 text-primary hover:text-primary/80 font-medium transition duration-200"
        >
          <ArrowBackwardIcon class="w-4" />
          View More Projects
        </a>
      </div>

      <div class="space-y-4">
        <img
          src="/brand/rs-color.svg"
          alt="RS Logo"
          class="w-10 h-10 mx-auto opacity-70"
        />

        <nav class="flex justify-center gap-6">
          <a href="/" class="project-footer-link">Home</a>
          <a href="/#about" class="project-footer-link">About</a>
          <a href="/#contact" class="project-footer-link">Contact</a>
        </nav>

        <p class="text-xs text-slate-500">
          2025 © Reeman L. Singh • All Rights Reserved
        </p>
      </div>
    </div>
  </Container>
</footer>

<style>
  @reference "@/styles/global.css";

  .project-footer-link {
    @apply text-sm text-slate-600 hover:text-primary transition duration-200;
  }
</style>
