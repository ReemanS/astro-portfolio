---
import "@/styles/global.css";
---

<footer
  transition:persist
  class="bg-primary text-background flex flex-col items-center w-full h-52 px-6 md:px-24 py-12"
>
  <img src="/brand/rs-white.svg" alt="RS Logo" width={50} height={50} />
  <ul class="flex gap-x-4 mt-5">
    <li>
      <a href="/" class="footer-link"> Home </a>
    </li>
    <li>
      <a href="/#projects" class="footer-link"> Projects </a>
    </li>
    <li>
      <a href="/#about" class="footer-link"> About </a>
    </li>
    <li>
      <a href="/#contact" class="footer-link"> Contact </a>
    </li>
  </ul>
  <div class="font-semibold mt-3 text-xs sm:text-base">
    2025 © Reeman L. Singh • All Rights Reserved
  </div>
</footer>

<style>
  @reference "@/styles/global.css";

  .footer-link {
    @apply relative transition-all duration-300 ease-out;
    text-decoration: none;
  }

  .footer-link::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -4px;
    left: 0;
    background-color: currentColor;
    transform: scaleX(0);
    transform-origin: bottom center;
    transition: transform 0.3s ease-out;
  }

  .footer-link:hover::after {
    transform: scaleX(1);
    transform-origin: bottom center;
  }
</style>
