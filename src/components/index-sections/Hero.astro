---
import { Image } from "astro:assets";
import Container from "@/components/Container.astro";

import heroImage from "@/assets/images/hero-img-rounded.png";
import ViewDocIcon from "@/assets/icons/view-doc.svg";
import ArrowDownIcon from "@/assets/icons/arrow-down.svg";
import ChatIcon from "@/assets/icons/chat.svg";
---

<section id="main" class="relative overflow-visible">
  <Container class="flex justify-center">
    <div class="pt-12 md:pt-28 text-center">
      <p>Hi there! I am</p>
      <h1
        class="text-primary name-letters leading-tight md:leading-tight font-extrabold -mb-0.5"
      >
        Reeman Singh
      </h1>

      <p
        class="pt-2 md:pt-5 mx-auto w-10/12 text-justify sm:text-center md:w-1/2"
      >
        Iâ€™m a <b>Software Developer</b> and <b>IT graduate</b> from the Philippines
        who enjoys building useful and engaging systems, designing for connection,
        efficiency, and a bit of curiosity on the web (and beyond).
        <Image
          priority
          src={heroImage}
          alt="Photo of Reeman Singh"
          width={220}
          height={220}
          class="pt-6 mx-auto drop-shadow-sm"
        />
        <div
          class="flex flex-col md:flex-row justify-center gap-2 mt-8 min-w-56 w-1/3 md:w-3/4 mx-auto"
        >
          <a
            target="_blank"
            rel="noopener noreferrer"
            class="flex justify-center"
            href="/Reeman_Singh_Resume_Latest.pdf"
          >
            <button class="btn-primary flex items-center justify-center w-full">
              <ViewDocIcon class="w-5 mr-1.5 h-min" />
              <div class="">View my Resume</div>
            </button>
          </a>
          <a href="#contact" class="flex justify-center">
            <button class="btn-primary flex items-center justify-center w-full">
              <ChatIcon class="w-5 mr-1.5 h-min" />
              <div class="">Get in Touch</div>
            </button>
          </a>
        </div>
        <a
          href="#about"
          class="my-12 inline-flex items-center gap-2 text-sm text-slate-500 hover:text-primary"
        >
          <ArrowDownIcon />
          <span>Scroll to learn more</span>
        </a>
      </p>
    </div>
  </Container>
</section>

<style>
  @reference "@/styles/global.css";

  .name-letters {
    font-size: calc((1.5rem + 4vw) - 0.1vw);
    @apply 2xl:text-7xl;
  }

  @media (min-width: 768px) {
    .name-letters {
      line-height: 4rem;
    }
  }
</style>
